<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>hienht.filter.FilterDispatcher</filter-class>
    </filter>
    <filter>
        <filter-name>CheckLoginAdminFilter</filter-name>
        <filter-class>hienht.filter.CheckLoginAdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CheckLoginUserFilter</filter-name>
        <filter-class>hienht.filter.CheckLoginUserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CheckAfterLoginFilter</filter-name>
        <filter-class>hienht.filter.CheckAfterLoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GetDiscountsFilter</filter-name>
        <filter-class>hienht.filter.GetDiscountsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GetDiscountsFilter</filter-name>
        <url-pattern>/view-cart</url-pattern>
        <url-pattern>/confirm-booking</url-pattern>
        <url-pattern>/update-item</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckAfterLoginFilter</filter-name>
        <url-pattern>/register-page</url-pattern>
        <url-pattern>/login-page</url-pattern>
        <url-pattern>/register</url-pattern>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckLoginUserFilter</filter-name>
        <url-pattern>/view-cart</url-pattern>
        <url-pattern>/add-to-cart</url-pattern>
        <url-pattern>/update-item</url-pattern>
        <url-pattern>/remove-item</url-pattern>
        <url-pattern>/apply-discount</url-pattern>
        <url-pattern>/remove-discount</url-pattern>
        <url-pattern>/confirm-booking</url-pattern>
        <url-pattern>/finish-payment</url-pattern>
        <url-pattern>/view-booking-history</url-pattern>
        <url-pattern>/pay-now</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckLoginAdminFilter</filter-name>
        <url-pattern>/create-tour</url-pattern>
        <url-pattern>/manage-booking</url-pattern>
        <url-pattern>/change-booking-status</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <location>/invalid</location>
    </error-page>
</web-app>
